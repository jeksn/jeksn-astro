<header class="fixed w-full px-4 md:px-0">
   <div x-data="{ open: false }" class="flex items-center justify-between max-w-screen-lg px-4 py-4 mx-auto">
     <div>
       <a href="/" class="px-4 py-2 text-sm text-black transition-all duration-700 ease-in-out bg-white rounded-sm hover:rounded-xl">
         jeksn.me
       </a>
      </div>
      <div>
         <button @click="open = ! open">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8" :class="{ 'hidden': open, 'block': !open }">
               <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
            </svg>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8" :class="{ 'hidden': !open, 'block': open }">
               <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
         </button>
      </div>
         <div x-show="open" class="absolute px-8 w-full left-0 top-[4rem] dropdown"
         x-transition:enter="transition ease-in-out duration-300"
         x-transition:enter-start="opacity-0"
         x-transition:enter-end="opacity-100"
         x-transition:leave="transition ease-in-out duration-300"
         x-transition:leave-start="opacity-100"
         x-transition:leave-end="opacity-0"
         >
            <ul class="pt-4 pb-8 max-w-screen-lg px-4 mx-auto">
               <li class="py-2">
                  <a 
                  href="/reading-list" 
                  class="text-sm transition-all ease-in-out hover:-translate-y-[2px]">
                  reading list
                  </a>
               </li>
               <li class="py-2">
                  <a 
                  href="/small-projects" 
                  class="text-sm transition-all ease-in-out hover:-translate-y-[2px]">
                    small projects
                  </a>
               </li>
               <li class="py-2">
                  <a 
                  href="https://github.com/jeksn/jeksn23" 
                  class="text-sm transition-all ease-in-out hover:-translate-y-[2px]">
                    repo
                  </a>
               </li>
            </ul>
        </div>
   </div>
   </header>

   <section class="w-full hidden">
