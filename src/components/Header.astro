         <div class="flex justify-between items-center relative px-8 py-6">
            <div>
               <a href="/" class="relative z-10 flex items-center w-auto text-2xl font-extrabold leading-none text-black select-none">tac.</a>
            </div>
            <button @click="open = ! open">
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8" :class="{ 'hidden': open, 'block': !open }">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
               </svg>
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8" :class="{ 'hidden': !open, 'block': open }">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
               </svg>
            </button>
            <div x-show="open" class="absolute px-8 w-full left-0 top-[4.5rem] bg-white" :class="{ 'rounded-b-md': open, 'rounded-md': !open }"
            x-transition:enter="transition transform origin-top ease-out duration-300"
